on_id":"576","number":"948","part":"2","hadith":null,"content":"    بَابُ مَنْ حَلَقَ قَبْلَ النَّحْرِ، أَوْ نَحَرَ قَبْلَ الرَّمْيِ ","pos":["576"],"cid":"576","noTashkeelContent":"    باب من حلق قبل النحر، أو نحر قبل الرمي "}}