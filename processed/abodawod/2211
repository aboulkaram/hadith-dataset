aption_id":"552","number":"124","part":"2","hadith":null,"content":" بَابُ الْفَقِيرِ يُهْدِي لِلْغَنِيِّ مِنَ الصَّدَقَةِ ","pos":["552"],"cid":"552","noTashkeelContent":" باب الفقير يهدي للغني من الصدقة "}}